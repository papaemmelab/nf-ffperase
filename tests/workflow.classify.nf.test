nextflow_workflow {

    name "Test Classify Step"
    script "main.nf"
    workflow "classifyWorkflow"

    test("Should run --step classify providing a local model") {
        when {
            params.step = "classify"
            workflow {
                """
                input[0] = Channel.fromPath('${projectDir}/tests/data/features.tsv')
                """
            }
        }
        then {
            with(workflow) {
                //  2: CLASSIFY_RANDOM_FOREST + PLOT_REPORT
                assert success
                assert exitStatus == 0
                assert trace.tasks().size() == 2  
                assert trace.succeeded().size() == 2 
            }
        }
    }

    test("Should run --step classify downloading model from hugging-face hub") {
        when {
            params.step = "classify"
            params.model = ""
            workflow {
                """
                input[0] = Channel.fromPath('${projectDir}/tests/data/features.tsv')
                """
            }
        }
        then {
            with(workflow) {
                //  3: DOWNLOAD_MODEL + CLASSIFY_RANDOM_FOREST + PLOT_REPORT
                assert success
                assert exitStatus == 0
                assert trace.tasks().size() == 3
                assert trace.succeeded().size() == 3
            }
        }
    }

}
